<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="android:Theme.Light">
	    <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#2da5da</item>
	</style>

	<style name="LISTVIEW" parent="@android:style/TextAppearance.Small">
  	    <item name="android:layout_margin">10dp</item>
   	    <item name="android:divider">#347a9c</item>
  	    <item name="android:dividerHeight">1dip</item>
  	    <item name="android:padding">0dp</item>
   	    <item name="android:orientation">vertical</item>
		<item name="android:background">@drawable/back_combos</item>
   	</style>

	<style name="COMBOS" parent="@android:style/TextAppearance.Small">
  	</style>

    <style name="COMBO" parent="@android:style/TextAppearance.Small">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_marginBottom">5dp</item>
		<item name="android:background">@drawable/back_spinner</item>
   	</style>

    <style name="PHONE_THEME" parent="@android:style/TextAppearance.Small">
  	    <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
  	    <item name="android:gravity">center</item>
        <item name="android:typeface">monospace</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:background">@drawable/focus</item>
	</style>

    <style name="NAME_THEME" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2da5da</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LABEL_THEME" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2da5da</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="MAIL_THEME" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/mail_back</item>
    </style>   
    
</resources>
